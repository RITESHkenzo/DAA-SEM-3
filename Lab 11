#include <stdio.h>
#include <limits.h>

// Function to print the optimal order of multiplication
void printParenthesis(int i, int j, int n, int bracket[][n], char *name) {
    if (i == j) {
        printf("%c", (*name)++);  // Print the matrix name (A, B, C...)
        return;
    }

    printf("(");
    printParenthesis(i, bracket[i][j], n, bracket, name);       // Left sub-chain
    printParenthesis(bracket[i][j] + 1, j, n, bracket, name);   // Right sub-chain
    printf(")");
}

// Function to find the minimum cost and parenthesis placement
void matrixChainOrder(int p[], int n) {
    int m[n][n];       // m[i][j] = minimum number of multiplications from i to j
    int bracket[n][n]; // To store the split position (k)

    // Cost is zero when multiplying one matrix
    for (int i = 1; i < n; i++)
        m[i][i] = 0;

    // L = chain length (number of matrices in current group)
    for (int L = 2; L < n; L++) {
        for (int i = 1; i < n - L + 1; i++) {
            int j = i + L - 1;
            m[i][j] = INT_MAX;

            for (int k = i; k < j; k++) {
                // Calculate cost of multiplying A[i..k] and A[k+1..j]
                int q = m[i][k] + m[k + 1][j] + p[i - 1] * p[k] * p[j];

                // If this cost is less than the previously stored one
                if (q < m[i][j]) {
                    m[i][j] = q;
                    bracket[i][j] = k; // Remember where the split happened
                }
            }
        }
    }

    // Output the result
    printf("\nMinimum number of multiplications required: %d\n", m[1][n - 1]);
    printf("Optimal Parenthesization: ");
    char name = 'A';
    printParenthesis(1, n - 1, n, bracket, &name);
    printf("\n");
}

int main() {
    int n;
    printf("Enter the number of matrices: ");
    scanf("%d", &n);

    int p[n + 1];
    printf("Enter the dimensions array (size %d): ", n + 1);
    for (int i = 0; i <= n; i++) {
        scanf("%d", &p[i]);
    }

    matrixChainOrder(p, n + 1);
    return 0;
}
